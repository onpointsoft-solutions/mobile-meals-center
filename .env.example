# Mobile Meals Center Environment Variables

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,mobilemealscenter.co.ke

# Database Configuration
DB_NAME=mobilemeals
DB_USER=mobilemeals_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Africa's Talking SMS Configuration
# Get these from https://account.africastalking.com/
AFRICASTALKING_USERNAME=your_username  # Use 'sandbox' for testing
AFRICASTALKING_API_KEY=your_api_key_here
AFRICASTALKING_SENDER_ID=MobileMeals

# SMS Configuration
SMS_ENABLED=True
SMS_DEBUG=False

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_email_password

# Payment Configuration (if using M-Pesa or other payment gateways)
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_PASSKEY=your_mpesa_passkey
MPESA_SHORTCODE=your_mpesa_shortcode

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://mobilemealscenter.co.ke
